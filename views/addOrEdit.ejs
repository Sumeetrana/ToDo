<body>
    <div class="row">
        <div class="col-md-6 offset-md-3" style="margin-top: 25px; padding: 20px">
        <h3><%= title %></h3>
        
        <form action="/" method="POST">
            <input type="hidden" name="_id" value="<%= oldtask._id %>">
            <div class="form-group">
                <label>Task Name</label>
                <input type="text" class="form-control" name="taskName" placeholder="<%= oldtask.taskName %>" id="" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/tasks" class="btn btn-secondary">View all</a>
            </div>
        </form>
    </div>
    </div>
</body>
